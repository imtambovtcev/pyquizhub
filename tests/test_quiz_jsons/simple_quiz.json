{
    "metadata": {
        "title": "Simple Quiz",
        "description": "A basic quiz with one question - demonstrates minimal new format",
        "author": "Test Author",
        "version": "2.0"
    },
    "variables": {
        "score_a": {
            "type": "integer",
            "mutable_by": ["engine"],
            "tags": ["score", "public"]
        }
    },
    "questions": [
        {
            "id": 1,
            "data": {
                "text": "Do you like apples?",
                "type": "multiple_choice",
                "options": [
                    {
                        "value": "yes",
                        "label": "Yes"
                    },
                    {
                        "value": "no",
                        "label": "No"
                    }
                ]
            },
            "score_updates": [
                {
                    "condition": "answer == 'yes'",
                    "update": {
                        "score_a": "score_a + 1"
                    }
                }
            ]
        }
    ],
    "transitions": {
        "1": [
            {
                "expression": "true",
                "next_question_id": null
            }
        ]
    }
}
